# Codigo da interface
<Caixa>:
    orientation: 'vertical'
    padding: 20
    Label:
        text: 'Teste Sockets'
        font_size: 40
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        Label:
            text: 'Digite a mensagem a ser enviada:'
            font_size: 20
            text_size: self.size
        TextInput:
            id: pr1
            multiline: False
        Label:
            text: 'Digite o numero de ip do destinatario'
            font_size: 20
            text_size: self.size
        TextInput:
            id: ip
            multiline: False
        Label:
            id: p1
            font_size: 20
        Button:
            text: 'Escutar'
            on_release: root.receber()
        Button:
            text: 'Enviar Mensagem'
            on_release: root.enviar()
